@page
@model ProjektopgaveE23.Pages.Users.LoginModel
@{
    ViewData["Title"] = "Log ind";
}

<div @* class="d-flex align-items-center justify-content-center vh-100" *@ align="center">
    <div class="card">
        <h1>Log ind</h1>
        <span class="text-danger">@Model.Message</span>
        <form method="post">
            <div class="form-group">
                <table>
                    <tr>
                        <td>Brugernavn</td>
                        <td><Input type="text" asp-for="@Model.Username" /></td>


                    </tr>
                    <tr>
                        <td>Password</td>
                        <td><Input type="password" asp-for="@Model.Password" /></td>

                    </tr>
                </table>
            </div>
            <br />
            <div class="form-group">
                <Input type="submit" value="Log ind" class="btn btn-secondary" />
            </div>


        </form>
        <br />
        <p>Ny til siden? <a asp-page="CreateUser">Opret dig som bruger her!</a></p>
    </div>
</div>

<style>
    .card {
        background-color: white;
        padding: 30px;
        margin-top: 20px;
        width: 35%;
        border-radius: 5px;
    }

    body {
        font-family: Arial;
        background: #f1f1f1;
    }

    
</style>