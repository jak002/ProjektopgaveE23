@page
@using ProjektopgaveE23.Models;
@model ProjektopgaveE23.Pages.Users.CreateUserModel
@{
    ViewData["Title"] = "Tilføj ny bruger";
}

<h1>Tilføj bruger</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.NewUser.Username" class="control-label"></label>
        <input asp-for="@Model.NewUser.Username" class="form-control" />
        <span asp-validation-for="NewUser.Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewUser.Password" class="control-label"></label>
        <input type="password" asp-for="@Model.NewUser.Password" class="form-control" />
        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewUser.Name" class="control-label"></label>
        <input asp-for="@Model.NewUser.Name" class="form-control" />
    </div>
    <p class="text-danger">@Model.EmailMessage</p>
    <div class="form-group">
        <label asp-for="@Model.NewUser.Email" class="control-label"></label>
        <input asp-for="@Model.NewUser.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.NewUser.PhoneNumber" class="control-label"></label>
        <input asp-for="@Model.NewUser.PhoneNumber" class="form-control" />
    </div>
    <p class="text-danger">@Model.PhoneMessage</p>
    <div class="form-group">
        <label asp-for="@Model.NewUser.MembershipType" class="control-label"></label>
        <br />
        @foreach(var c in System.Enum.GetValues(typeof(MembershipType)))
        {
            <label class="control-label">@c</label>
            <input type="radio" asp-for="@Model.NewUser.MembershipType" value="@c"/>
        }
    </div>

    <div class="form-group">
        <input type="submit" value="Tilføj bruger" class="btn btn-primary" />
    </div>
</form>
